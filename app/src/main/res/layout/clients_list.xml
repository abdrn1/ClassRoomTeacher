<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/clientImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_row="0"
         android:layout_marginTop="10dp"
        android:layout_rowSpan="2"
        android:scaleType="fitCenter"
        android:clickable="false"
        android:src="@drawable/prof1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/clientName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="left"

        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="8dp"
        android:text="ABD Radwan"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/clientImage"
        android:layout_toRightOf="@+id/clientImage" />

    <CheckBox
        android:id="@+id/clientselected"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:visibility="visible"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/last_status"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_gravity="left"
        android:paddingTop="0dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="nothing to do"
        android:textStyle="bold"
        android:layout_below="@+id/clientName"
        android:layout_alignRight="@+id/clientName"
        android:layout_alignEnd="@+id/clientName"
        android:layout_toRightOf="@+id/clientImage"
        android:layout_toEndOf="@+id/clientImage" />

    <TextView
        android:id="@+id/unread_mesage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="100"
         android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:background="@drawable/bg_circle"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/message_time"
        android:layout_alignLeft="@+id/message_time"
        android:layout_alignStart="@+id/message_time"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22-10-2016 11:48"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:id="@+id/message_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>