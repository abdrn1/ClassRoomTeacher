<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.abd.classroom1.ActiveUsersFragment">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:id="@+id/clients_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawSelectorOnTop="true"
        android:listSelector="@drawable/list_selector"

        android:stackFromBottom="false"
        android:transcriptMode="alwaysScroll"
         />

    <LinearLayout
        android:id="@+id/msgcompose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#dee1e6"
        android:orientation="horizontal"
        android:weightSum="3">

        <EditText
            android:id="@+id/inputMsg"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@drawable/rounded_textview"
            android:hint="@string/text_here"
            android:paddingLeft="6dp"

            android:paddingRight="6dp"
            android:textColor="@color/text_msg_input" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape"
            android:src="@drawable/l1send"
            android:textColor="@color/white"
             />

        <ImageButton
            android:id="@+id/btnsendfile"
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape"
            android:src="@drawable/ic_file_upload_black_24dp"
            android:textColor="@color/white"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#dee1e6"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="1">
        <ImageButton
            android:id="@+id/btn_start_exam"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginLeft="2dp"

            android:background="@drawable/circle_shape"
            android:src="@drawable/l2exam" />
        <ImageButton
            android:id="@+id/btnLock"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape"
            android:src="@drawable/l1locked"
            android:textColor="@color/white"
            />

        <ImageButton
            android:id="@+id/btnunLock"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape"
            android:src="@drawable/l1unlocked"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/btn_capturepic"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape"
            android:src="@drawable/l1camera" />

        <ImageButton
            android:id="@+id/btnMonitor"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape"
            android:src="@drawable/l1television"
            android:textColor="@color/white"
            />

    </LinearLayout>

</LinearLayout>
